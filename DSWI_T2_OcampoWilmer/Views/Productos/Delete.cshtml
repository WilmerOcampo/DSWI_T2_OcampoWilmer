@model DSWI_T2_OcampoWilmer.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-5 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Eliminar Producto</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-center mb-4">¿Estás seguro de que quieres eliminar?</h3>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NombreProveedor)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NombreProveedor)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.NombreCategoria)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NombreCategoria)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.UnidadMedida)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UnidadMedida)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.PrecioUnidad)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.PrecioUnidad)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Stock)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Stock)
                        </dd>
                    </dl>
                    <form asp-action="Delete" class="text-center">
                        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                        <a asp-action="Productos" class="btn btn-primary">Regresar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

